<bg id="root">
  <tab-selector tab-tag="avatar-tabs" anchor-pos-y="-2"></tab-selector>

  <tab tags="avatar-tabs" tab-name="General" anchor-max-y="0.8">
    <settings-container>
      <checkbox-setting text="Visible in First Person" id="visible-in-first-person" on-change="visible-in-first-person-change"/>
      <list-setting text="Resize Mode" id="resize-mode" on-change="resize-mode-change" options="resize-mode-options" formatter="resize-mode-formatter"></list-setting>
      <checkbox-setting id="enable-locomotion" text="Enable locomotion" hover-hint="Allow feet to be moved automatically to follow your head/body when not using dedicated trackers." on-change="enable-locomotion-change"/>
      <checkbox-setting text="Floor Height Adjust" hover-hint="Move the floor so the avatar is standing at full height even if it is bigger or smaller than the player." id="floor-adjust" on-change="floor-adjust-change"/>
      <checkbox-setting text="Move Floor with Room Adjust" hover-hint="Move the floor along with the game's built-in vertical room adjust." id="move-floor-with-room-adjust" on-change="move-floor-with-room-adjust-change"/>
      <increment-setting id="camera-clip-plane" text="Camera Near Clip Plane" hover-hint="Distance from the eyes at which objets start being visible." min="0.01" max="0.3" increment="0.01" on-change="camera-clip-plane-change"></increment-setting>
      
      <horizontal pad-top="1">
        <text text="Arm Span" font-size="5" align="Left"></text>
        <text id="arm-span" font-size="5" align="Left"></text>
        <button text="Measure" on-click="measure-arm-span-click" hover-hint="For optimal results, hold your arms out to either side of your body and point the ends of the controllers outwards as far as possible (turn your hands if necessary)."></button>
      </horizontal>
    </settings-container>
  </tab>

  <tab tags="avatar-tabs" tab-name="Avatar Specific" anchor-max-y="0.8">
    <settings-container>
      <checkbox-setting id="ignore-exclusions" text="Ignore first person exclusions" hover-hint="Show the entire model in first person, even if some parts were configured to be hidden in first person. This may cause issues on certain avatars." on-change="ignore-exclusions-change"/>
      <checkbox-setting id="bypass-calibration" text="Bypass calibration" hover-hint="Disable the need for calibration before full body tracking is applied." on-change="bypass-calibration-change"/>
      <checkbox-setting id="automatic-calibration" text="Use automatic calibration" hover-hint="Must be supported by avatar" on-change="automatic-calibration-change"/>

      <horizontal child-align="MiddleLeft" child-expand-width="true" child-control-width="true" pad-top="1" pad-bottom="1">
        <button id="calibrate-button" text="Calibrate FBT" hover-hint="Calibrate full body tracking." on-click="calibrate-fbt-click"></button>
        <button id="clear-button" text="Clear" hover-hint="Clear calibration data." on-click="clear-fbt-calibration-data-click"></button>
      </horizontal>
    </settings-container>
  </tab>

  <tab tags="avatar-tabs" tab-name="Automatic FBT" anchor-max-y="0.8">
    <settings-container>
      <increment-setting id="pelvis-offset" text="Pelvis Offset" hover-hint="Horizontal distance between pelvis and tracker" min="-0.5" max="0.5" increment="0.01" on-change="pelvis-offset-change"></increment-setting>
      <increment-setting id="foot-offset" text="Foot Offset" hover-hint="Horizontal distance between heel and tracker" min="0" max="0.5" increment="0.01" on-change="foot-offset-change"></increment-setting>

      <list-setting text="Waist Tracker Position" id="waist-tracker-position" on-change="waist-tracker-position-change" options="waist-tracker-position-options"></list-setting>

      <horizontal child-align="MiddleLeft" child-expand-width="true" child-control-width="true" pad-top="1" pad-bottom="1">
        <button id="auto-calibrate-button" text="Calibrate" hover-hint="Automatically calibrate full body tracking." on-click="auto-calibrate-fbt-click"></button>
        <button id="auto-clear-button" text="Clear" hover-hint="Clear calibration data." on-click="auto-clear-fbt-calibration-data-click"></button>
      </horizontal>

      <checkbox-setting text="Calibrate FBT on start" hover-hint="Run automatic full body tracking when the game starts. Only works with avatars that support automatic calibration and have it enabled." id="calibrate-fbt-on-start" on-change="calibrate-fbt-on-start-change"/>
    </settings-container>
  </tab>
</bg>